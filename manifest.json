{
  "manifest_version": 3,
  "name": "Text Reader Extension",
  "version": "1.0",
  "description": "Saytdakı əsas mətni console-a yazdırır",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting","storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
